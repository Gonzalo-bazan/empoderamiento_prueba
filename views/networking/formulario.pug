extends ../layout-networking

block contenido
    .formulario-contenedor
        h1.titulo-comentario Formulario
        
        
        main.contenedor
            form.formulario(action="/netw")
                fieldset
                    
                    legend Información General

                    label(for="producto") Indique en que Ministerio Trabaja 
                    select.ministerio(name="producto" id="productos" required)
                        option(value="" disabled selected) -- Seleccione --
                        option(value="trabajo") Ministerio de Trabajo y Promoción del Empleo
                        option(value="mujer") Ministerio de la Mujer y Poblaciones Vulnerables
                    

                    label.label-nombre(for="nombre") Nombre
                    input.input-nombre(type="text" id="nombre" name="nombre" placeholder="Nombre" required)

                    label(for="apellidoPaterno") Apellido Paterno
                    input(type="text" id="apellidoPaterno" name="apellidoPaterno" placeholder="Apellido Paterno" required)

                    label(for="apellidoMaterno") Apellido Materno 
                    input(type="text" id="apellidoMaterno" name="apellidoMaterno" placeholder="Apellido Materno" required)

                    label(for="apellidoMaterno") Indique su Área de Trabajo 
                    input(type="text" id="apellidoMaterno" name="apellidoMaterno" placeholder="Área de Trabajo" required)

                    label(for="apellidoMaterno") Indique su Cargo
                    input(type="text" id="apellidoMaterno" name="apellidoMaterno" placeholder="Cargo" required)
                fieldset
                    
                    legend Preguntas

                    .preguntas
                        .pregunta
                            label(for="actos") ¿Ha presenciado o ha sido participe de un acto discriminatorio en su trabajo?
                            .radio
                                .r 
                                    input(type="radio" value="Si" name="actos" id="actos")
                                    | Si
                                .r
                                    input(type="radio" value="No" name="actos" id="actos")
                                    | No 
                        .pregunta
                            label(for="acoso") ¿Ha presenciado o ha sido participe de un acto de acoso sexual en su trabajo?
                            .radio
                                .r
                                    input(type="radio" value="Si" name="acoso" id="acoso")
                                    | Si
                                .r
                                    input(type="radio" value="No" name="acoso" id="acoso")
                                    | No
                        .pregunta
                            label(for="domestica") ¿Usted piensa que las labores domésticas que realizan las mujeres tiene una desvalorización económica?
                            .radio
                                .r
                                    input(type="radio" value="Si" name="domestica" id="domestica")
                                    | Si
                                .r
                                    input(type="radio" value="No" name="domestica" id="domestica")
                                    | No
                        .pregunta
                            label(for="participacion") ¿Usted cree que los hombres tienen preferencia en la participación en los programas del estado?
                            .radio
                                .r
                                    input(type="radio" value="Si" name="participacion" id="participacion")
                                    | Si
                                .r
                                    input(type="radio" value="No" name="participacion" id="participacion")
                                    | No                        

                    

                    
                
                .boton-formulario 
                    a.boton-enviar(href="#") Enviar 

    section.principal-eventos-gestion
        .contenedor 
            .contenido-eventos 
                h1 Eventos  
                h2 Gestión Pública
            .eventos-gestion.eventos-publica
                .evento-gestion.evento-publica.e-1
                    .contenido-evento
                        h3 Capacitación
                        h4 Acoso Sexual en el Trabajo 
                        .fecha-evento
                            p Fecha: 12/07/2021
                            p Hora: 08:00 pm 
                        .lugar-evento 
                            h4 Contectate por 
                            .medios-evento 
                                i.medio(class="fab fa-facebook")
